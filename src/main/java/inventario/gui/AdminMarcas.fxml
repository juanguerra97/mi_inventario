<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane minWidth="235.0" prefHeight="450.0" prefWidth="250.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.1">
   <center>
      <ListView fx:id="listMarcas" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <HBox spacing="3.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="2.0" />
         </BorderPane.margin>
         <children>
            <TextField fx:id="fieldNomMarca" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnNewMarca" mnemonicParsing="false" text="Nueva" />
         </children>
      </HBox>
   </top>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
   </padding>
</BorderPane>
